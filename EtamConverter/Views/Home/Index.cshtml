@model FilePathModel

@{
    ViewData["Title"] = "Home Page";
}




<div class="row mt-5 bg-light p-5">
    <h1 class="display-4">WO to ETAM</h1>
    <p>WO Log Summary .txt to Etam .sch</p>
   <div class="d-flex justify-content-center align-items-start flex-column">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="form-group mt-3">
                    <label class="col-form-label">Select File</label>
                    <input asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                   <input asp-for="SignalType" type="radio" value="agg" class="form-inline"  />Agg-Market
                   <input asp-for="SignalType" type="radio" value="sub" class="form-inline" />Sub-Market
                   <span asp-validation-for="SignalType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                 <button type="submit" class="btn btn-primary">Upload / Convert</button>
            </div>
        </form>
    </div>
</div>
